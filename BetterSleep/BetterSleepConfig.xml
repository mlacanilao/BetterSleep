<?xml version="1.0" encoding="UTF-8"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="ConfigLayoutSchema.xsd">
    <hlayout id="hlayout01">
        <vlayout id="vlayout01" border="true">
            <title>title01</title>
            
            <toggle id="enableCanSleepToggle">
                <contentId>toggle01</contentId>
                <tooltip>tooltip01</tooltip>
